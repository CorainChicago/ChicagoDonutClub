<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Chicago Donut Club" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Chicago Donut Club" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

  </head>
  <body>
      <div class="container">
        <div class="jumbotron">
          <h1>Chicago Donut Club</h1>
        </div>
        <%= render 'layouts/navigation' %>
       <%= render 'layouts/messages' %>
       <%= yield %>
      </div>    
    </div>
  </body>
</html>
