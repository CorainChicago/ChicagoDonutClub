<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Chicago Donut Club" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Chicago Donut Club" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['API_KEY']%>&callback=initMap">
    </script>
  </head>
  <body>
      <div class="container">
      <%= render 'layouts/navigation' %>
       <%= render 'layouts/messages' %>
       <%= render 'layouts/errors' %>
       <%= yield %>
      </div>    
    </div>
  </body>
</html>
