<section class="new_rating"
  <%= form_for DonutRating.new do |f| %>
    <%= f.label :score %>
    <%= f.number_field :score %><br />
     <%= f.label :description %>
    <%= f.text_field :description %><br />
    <%= hidden_field :donut_id, params[:id] %>
    <%= hidden_field :user_id, session[:user_id] %>
    <%= submit_tag "Rate a Donut" %>
  <% end %>
</section>  