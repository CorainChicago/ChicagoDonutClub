<h2>Each donut is different each day. </h2>
<section class="col-sm-2 panel panel-default">
  <p>Name: <%= @donut.name %></p>
  <p>Description: <%= @donut.description %></p>
  <p>Donut Shop: <%= @donut.donut_shop.name %> </p>
  </section> 
  <section class="col-sm-2">
  <% if @ratings != nil %>
    <% @ratings.each do |r| %>
      <div>
        <%= r.score %></br>
        <%= r.description %>
      </div>
    <% end %>
  <% end %>
 </section> 
<%= render "donut_ratings/new" %>
