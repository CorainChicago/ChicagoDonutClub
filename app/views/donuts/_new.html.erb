
<%= form_for Donut.new do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :type %>
  <%= f.radio_button :yeast, 'Yeast', :checked => true %> Yeast 
  <%= f.radio_button :type, 'Old Fashion/Cake', :checked => true %> Old Fashion/Cake 
  <%= f.radio_button :type, 'Speciality', :checked => true %> Speciality
  <%= f.radio_button :type, 'Glutton Free', :checked => true %> Glutton Free </br>
  <%= f.label :occassion %>
  <%= f.radio_button :occassion , 'Splurge', :checked => true %> Splurge 
  <%= f.radio_button :occassion , 'Value', :checked => true %> Value
  <%= f.radio_button :occassion , 'Geographic Desirability', :checked => true %> Geographic Desirability </br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= collection_select(:donut, :donut_shop_id, DonutShop.all, :id, :name) %>
  <%= submit_tag "Create a Donut" %>
<% end %>